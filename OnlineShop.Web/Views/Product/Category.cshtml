@using OnlineShop.Web.Models
@model OnlineShop.Web.Infrastructure.Core.PaginationSet<OnlineShop.Web.Models.ProductViewModel>
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var productCategory = (ProductCategoryViewModel)ViewBag.ProductCategory;
}


<div class="women-product">

    @if (Model.Items.Any())
    {
        var urlProductCategory = $"/{productCategory.Alias}/pc-{productCategory.Id}";
        <div class="w_content">
            <div class="women">
                <a href="@urlProductCategory"><h4>@productCategory.Name - <span>@Model.Count sản phẩm</span> </h4></a>
                <ul class="w_nav">
                    <li>Sort : </li>
                    <li><a class="active" href="?page=@Model.Page&&sort=popular">Phổ biến</a></li> |
                    <li><a href="?page=@Model.Page">Mới</a></li> |
                    <li><a href="?page=@Model.Page&&sort=discount">Giảm giá</a></li> |
                    <li><a href="?page=@Model.Page&&sort=price">Giá: Thấp -> Cao </a></li>
                    <li class="clearfix"></li>
                </ul>
                <div class="clearfix"></div>
            </div>
        </div>
            <!-- grids_of_4 -->
        <div class="grid-product">
            @foreach (var productViewModel in Model.Items)
                {
                    var url = $"/{productViewModel.Alias}/p-{productViewModel.Id}";
                <div class="product-grid">
                    <div class="content_box">
                        <a href="@url">
                            <div class="left-grid-view grid-view-left">
                                <img src="@productViewModel.Image" class="img-responsive watch-right" alt="@productViewModel.Name" />
                                <div class="mask">
                                    <div class="info">Quick View</div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <h4><a href="@url">@productViewModel.Name</a></h4>
                    <p>@Html.Raw(productViewModel.Description)</p>
                    @(!string.IsNullOrEmpty(productViewModel.Price.ToString("")) ? $"{productViewModel.Price:##,###} vnđ" : "Liên hệ")
                </div>
            }

        </div>
        <div class="clearfix"></div>
        if (Model.TotalPages > 1)
        {
            var startPage = Math.Max(1 , Model.Page - Model.MaxPage / 2);
            var endPage = Math.Min(Model.TotalPages , Model.Page + Model.MaxPage / 2);
            <nav class="pull-right">
                <ul class="pagination">
                    @if (Model.Page > 1)
                    {
                        <li>
                            <a href="?page=1" aria-label="First">
                                <i class="fa fa-angle-double-left"></i>
                            </a>
                        </li>
                        <li>
                            <a href="?page=@(Model.Page - 1)" aria-label="Previous">
                                <i class="fa fa-angle-left"></i>
                            </a>
                        </li>
                    }

                    @for (var i = startPage ; i <= endPage ; i++)
                    {
                        if (Model.Page == i)
                        {
                            <li class="active">
                                <a href="?page=@i" class="active" title="Trang @i">@i</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="?page=@i" title="Trang @i">@i</a>
                            </li>
                        }
                    }

                    @if (Model.Page < Model.TotalPages)
                    {
                        <li>
                            <a href="?page=@(Model.Page+1)" aria-label="Next">
                                <i class="fa fa-angle-right"></i>
                            </a>
                        </li>

                        <li>
                            <a href="?page=@Model.TotalPages" aria-label="Last">
                                <i class="fa fa-angle-double-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="text-center">Không có sản phẩm nào được tìm thấy !</div>
    }

</div>
