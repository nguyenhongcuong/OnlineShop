
@model OnlineShop.Web.Models.HomeViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var stt = 0;
    var stt2 = 0;
}

@section EndScript{
    <script src="/Assets/Client/js/jquery.wmuSlider.js"></script>
    <script>
        $('.example1').wmuSlider();
    </script>
}


<div class="shoes-grid">

    <div class="wrap-in">
        <div class="wmuSlider example1 slide-grid">
            <div class="wmuSliderWrapper">

                @foreach (var slideViewModel in Model.SlideViewModels)
                {
                    <article style="position: absolute; width: 100%; opacity: 0;">
                        <div class="banner-matter">
                            <div class="col-md-5 banner-bag">
                                <img class="img-responsive " src="@slideViewModel.Image" alt="@slideViewModel.Name" />
                            </div>
                            <div class="col-md-7 banner-off">
                                @Html.Raw(slideViewModel.Content)
                            </div>

                            <div class="clearfix"> </div>
                        </div>

                    </article>
                }

            </div>


            <ul class="wmuSliderPagination">
                @for (int i = 0; i < Model.SlideViewModels.Count(); i++)
                {
                    <li><a href="#" class="">@i</a></li>
                }
            </ul>
        </div>

        @section HomeProducts
        {
            <div class="shoes-grid-left">
                <a href="single.html">
                    <div class="col-md-6 con-sed-grid">

                        <div class=" elit-grid">

                            <h4>consectetur  elit</h4>
                            <label>FOR ALL PURCHASE VALUE</label>
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, </p>
                            <span class="on-get">GET NOW</span>
                        </div>
                        <img class="img-responsive shoe-left" src="../../Assets/Client/images/sh.jpg" alt=" " />

                        <div class="clearfix"> </div>

                    </div>
                </a>
                <a href="single.html">
                    <div class="col-md-6 con-sed-grid sed-left-top">
                        <div class=" elit-grid">
                            <h4>consectetur  elit</h4>
                            <label>FOR ALL PURCHASE VALUE</label>
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, </p>
                            <span class="on-get">GET NOW</span>
                        </div>
                        <img class="img-responsive shoe-left" src="../../Assets/Client/images/wa.jpg" alt=" " />

                        <div class="clearfix"> </div>
                    </div>
                </a>
            </div>
            <div class="products">
                <h5 class="latest-product">Sản phẩm mới nhất</h5>
                <a class="view-all" href="san-pham.html">Xem tất cả<span> </span></a>
            </div>
            <div class="product-left">
                @foreach (var lastProduct in Model.LastProductViewModels)
                {
                    stt++;
                    var hasClassGridTopChain = stt == 3 ? "grid-top-chain" : "";
                    var url = $"/{lastProduct.Alias}.p-{lastProduct.Id}.html";
                    <div class="col-md-4 chain-grid @hasClassGridTopChain">
                        <a href="@url"><img class="img-responsive chain" src="@lastProduct.Image" alt="@lastProduct.Name" /></a>
                        <span class="star"> </span>
                        <div class="grid-chain-bottom">
                            <h6><a href="@url">@lastProduct.Name</a></h6>
                            <div class="star-price">
                                <div class="dolor-grid">
                                    @if (lastProduct.PromotionPrice.HasValue)
                                    {
                                        <span class="actual">@lastProduct.PromotionPrice.GetValueOrDefault().ToString("##,###") vnđ</span>
                                    }

                                    <span class="reducedfrom">@lastProduct.Price.ToString("##,###") vnđ</span>
                                    <span class="rating">
                                        <input type="radio" class="rating-input" id="rating-input-1-5" name="rating-input-1">
                                        <label for="rating-input-1-5" class="rating-star1"> </label>
                                        <input type="radio" class="rating-input" id="rating-input-1-4" name="rating-input-1">
                                        <label for="rating-input-1-4" class="rating-star1"> </label>
                                        <input type="radio" class="rating-input" id="rating-input-1-3" name="rating-input-1">
                                        <label for="rating-input-1-3" class="rating-star"> </label>
                                        <input type="radio" class="rating-input" id="rating-input-1-2" name="rating-input-1">
                                        <label for="rating-input-1-2" class="rating-star"> </label>
                                        <input type="radio" class="rating-input" id="rating-input-1-1" name="rating-input-1">
                                        <label for="rating-input-1-1" class="rating-star"> </label>
                                    </span>
                                </div>
                                <a class="now-get get-cart" href="#">Thêm vào giỏ</a>
                                <div class="clearfix"> </div>
                            </div>
                        </div>
                    </div>
                }
                <div class="clearfix"> </div>
            </div>
            <div class="products">
                <h5 class="latest-product">Sản phẩm bán chạy</h5>
                <a class="view-all" href="san-pham-ban-chay.html">Xem tất cả<span> </span></a>
            </div>
            <div class="product-left">
                
                @foreach (var topSaleProduct in Model.TopSaleProductViewModels)
                {
                    stt2++;
                    var hasClassGridTopChain = stt2 == 3 ? "grid-top-chain" : "";
                    var url2 = $"/{topSaleProduct.Alias}.p-{topSaleProduct.Id}.html";
                    <div class="col-md-4 chain-grid @hasClassGridTopChain">
                        <a href="@url2"><img class="img-responsive chain" src="@topSaleProduct.Image" alt="@topSaleProduct.Name" /></a>
                        <span class="star"> </span>
                        <div class="grid-chain-bottom">
                            <h6><a href="@url2">@topSaleProduct.Name</a></h6>
                            <div class="star-price">
                                <div class="dolor-grid">
                                    @if (topSaleProduct.PromotionPrice.HasValue)
                                    {
                                        <span class="actual">@topSaleProduct.PromotionPrice.GetValueOrDefault().ToString("##,###") vnđ</span>
                                    }

                                    <span class="reducedfrom">@topSaleProduct.Price.ToString("##,###") vnđ</span>
                                    <span class="rating">
                                        <input type="radio" class="rating-input" id="rating-input-1-5" name="rating-input-1">
                                        <label for="rating-input-1-5" class="rating-star1"> </label>
                                        <input type="radio" class="rating-input" id="rating-input-1-4" name="rating-input-1">
                                        <label for="rating-input-1-4" class="rating-star1"> </label>
                                        <input type="radio" class="rating-input" id="rating-input-1-3" name="rating-input-1">
                                        <label for="rating-input-1-3" class="rating-star"> </label>
                                        <input type="radio" class="rating-input" id="rating-input-1-2" name="rating-input-1">
                                        <label for="rating-input-1-2" class="rating-star"> </label>
                                        <input type="radio" class="rating-input" id="rating-input-1-1" name="rating-input-1">
                                        <label for="rating-input-1-1" class="rating-star"> </label>
                                    </span>
                                </div>
                                <a class="now-get get-cart" href="#">Thêm vào giỏ</a>
                                <div class="clearfix"> </div>
                            </div>
                        </div>
                    </div>
                }
              
                
                <div class="clearfix"> </div>
            </div>
        }
